#include <stdio.h>
#include <stdlib.h>
#include <math.h>

#define NUM_ALUNOS 15

int calcularMediaArredondada(int pr1, int pr2) {
    return (pr1 + pr2) / 2;
}

char* determinarSituacao(int media) {
    return (media >= 6) ? "AP" : "RP";
}

int main() {
    char nomes[NUM_ALUNOS][50];
    int pr1[NUM_ALUNOS], pr2[NUM_ALUNOS];
    int media[NUM_ALUNOS];
    char situacao[NUM_ALUNOS][3];

    for (int i = 0; i < NUM_ALUNOS; i++) {
        printf("Digite o nome do aluno %d: ", i + 1);
        scanf("%s", nomes[i]);
        printf("Digite a nota da PR1 do aluno %d: ", i + 1);
        scanf("%d", &pr1[i]);
        printf("Digite a nota da PR2 do aluno %d: ", i + 1);
        scanf("%d", &pr2[i]);
        
        media[i] = calcularMediaArredondada(pr1[i], pr2[i]);

        strcpy(situacao[i], determinarSituacao(media[i]));
    }

    // Imprimir listagem formatada
    printf("\nListagem de Alunos:\n");
    printf("--------------------------------------------------\n");
    printf("Nome\t\tMédia\tSituação\n");
    printf("--------------------------------------------------\n");

    for (int i = 0; i < NUM_ALUNOS; i++) {
        printf("%s\t\t%d\t%s\n", nomes[i], media[i], situacao[i]);
    }

    return 0;
}
