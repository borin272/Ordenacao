#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int compare(const void *a, const void *b) {
    return (*(char *)a - *(char *)b);
}

int main() {
    char str[100];
    
    printf("Digite uma string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = '\0';  // Remover o caractere de nova linha da entrada

    int len = strlen(str);

    char *ptrs[len];
    for (int i = 0; i < len; i++) {
        ptrs[i] = &str[i];
    }

    qsort(ptrs, len, sizeof(char *), compare);

    printf("String original: %s\n", str);
    
    printf("String ordenada: ");
    for (int i = 0; i < len; i++) {
        printf("%c", *ptrs[i]);
    }
    printf("\n");

    return 0;
}
